<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".ui.activity.DataActivity">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:background="@drawable/title_bg2"
            android:id="@+id/exc_count"
            android:gravity="center"
            android:text="异常件数(3)"
            android:textColor="#FF6A6A"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/data_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/data_ll_out"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/title_bg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/img_data_out"
                    android:src="@mipmap/icon_out_nor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/data_tv_in_name"
                    android:textColor="#333333"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="取出件数-32"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/data_ll_in"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="3dp"
                android:background="@drawable/title_bg2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/img_data_in"
                    android:src="@mipmap/icon_in_sle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/data_tv_out_name"
                    android:textColor="#1DB1FF"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="放入件数+32"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/title_bg2"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:text="物资品名"
                android:textColor="#666666"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="13sp"
                android:layout_height="match_parent"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#F2F2F2"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:text="规格"
                android:textColor="#666666"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="13sp"
                android:layout_height="match_parent"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#F2F2F2"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:text="供应商"
                android:textColor="#666666"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="13sp"
                android:layout_height="match_parent"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#F2F2F2"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/img_date_sort"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:text="过期时间"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/paixu_nor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#F2F2F2"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/img_number_sort"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:text="数量"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/paixu_nor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#F2F2F2"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <ListView
            android:divider="#00000000"
            android:id="@+id/data_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/data_btn_back"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_bg"
            android:textColor="#1DB1FF"
            android:text="返回"
            android:layout_width="160dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/data_btn_sure"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_bg2"
            android:text="确定"
            android:layout_width="160dp"
            android:layout_height="30dp"/>
    </LinearLayout>
</FrameLayout>