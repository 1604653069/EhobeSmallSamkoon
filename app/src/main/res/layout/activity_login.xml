<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/logo"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:src="@mipmap/logologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginRight="-10dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:layout_toRightOf="@id/logo"
        android:layout_alignBottom="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/login_label_tip"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/login_succ_lable"
            android:layout_width="180dp"
            android:layout_height="50dp">
           <LinearLayout
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
               <ImageView
                   android:src="@mipmap/icon_suf"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/login_label_tv"
                    android:text="登陆成功，9527"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/logo"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.flyco.tablayout.SlidingTabLayout
            android:layout_gravity="center"
            android:id="@+id/tl"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            tl:tl_indicator_color="#04a8ff"
            tl:tl_textAllCaps="true"
            tl:tl_textBold="BOTH"
            tl:tl_textsize="50sp"
            tl:tl_textSelectColor="#04a8ff"
            tl:tl_textUnselectColor="#999999"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</RelativeLayout>