<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#F5F5F5"
        android:id="@+id/item_data_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/item_data_name"
            android:gravity="center"
            android:text="物资品名"
            android:textColor="#666666"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="13sp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/item_data_specification"
            android:gravity="center"
            android:text="规格"
            android:textColor="#666666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/item_data_supplier"
            android:gravity="center"
            android:text="供应商"
            android:textColor="#666666"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="13sp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/img_date_sort"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_data_date"
                android:gravity="center"
                android:text="过期时间"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/img_number_sort"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_data_count"
                android:gravity="center"
                android:text="数量"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>